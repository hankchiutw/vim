# See default configuration: https://github.com/jonas/tig/blob/master/tigrc
# Useful vim binding: https://github.com/jonas/tig/blob/master/contrib/vim.tigrc

set main-view	= line-number:no,interval=5 id:yes date:relative author:full,width=10 commit-title:yes,graph,refs,overflow=no
set refs-view	= line-number:no id:no date:custom,format="%Y-%m-%d %H:%M" author:full,maxwidth=10 ref:maxwidth=36 commit-title

# set main-view-date = custom
set main-view-date-format = "%Y-%m-%d %H:%M"

# vim like bindings
bind generic	<C-f>	move-page-down
bind generic	<C-b>	move-page-up

bind generic g  none
bind generic gg move-first-line

bind main    G move-last-line
bind generic	G	move-last-line

# custom bindings
bind generic	<C-j>	enter
bind generic	K	scroll-line-up
bind generic	J	scroll-line-down

color cursor 11 237
color title-focus default 100
color title-blur default 236
