[user]
  name = hank
  email = hankchiu.tw@gmail.com
[core]
  editor = vim
[color]
  ui = auto
[push]
  default = upstream
[alias]
  co = checkout
  br = branch
  brv = branch -vva
  ci = commit
  st = status
  re = remote
  rev = remote -v
  di = "!git diff --color=always $1 $2| showlinenum.awk 'color_line_number=1;33' 'color_separator=1;33' | less -R #"
  sort = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short) %(refname:short)' --count=10
  cp = cherry-pick
