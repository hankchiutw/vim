  "terminal": {
    "detect_venv": "off"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "code_actions_on_format": {
    "source.fixAll.eslint": true
  },
  "languages": {
    "TypeScript": {
      "language_servers": ["typescript-language-server"]
    },
    "TSX": {
      "language_servers": ["typescript-language-server"]
    },
    "JavaScript": {
      "language_servers": ["typescript-language-server"]
    }
  },
  "soft_wrap": "editor_width",
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font Mono"],
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  }
}
